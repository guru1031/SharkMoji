<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="@dimen/mm_cat_width"
        android:layout_height="0dp"
        android:layout_weight="1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/mm_grid_icon"
        tools:layout_width="80dp"
        tools:layout_height="80dp"
        android:id="@+id/_mm_item_category_iv"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mm_locked_foreground"
            android:visibility="gone"
            tools:layout_width="80dp"
            tools:layout_height="80dp"
            android:id="@+id/_mm_item_category_foreground"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        tools:text="Expressions"
        style="@style/MakeMojiHeaderTextAppearance"
        android:ellipsize="end"
        android:maxEms="5"
        android:singleLine="true"
        android:padding="4dp"
        android:id="@+id/_mm_item_category_tv"
        android:layout_height="wrap_content" />

</LinearLayout>